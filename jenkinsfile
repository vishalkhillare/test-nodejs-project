pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the app.js application...'
                bat label: 'npm install', script: '"C:\\Program Files\\nodejs\\npm" install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat label: 'npm test', script: '"C:\\Program Files\\nodejs\\npm" test'
                echo "Tests completed successfully"
            }
        }

        stage('Deploy to Development') {
            when {
                branch 'dev-test-nodejs'
            }
            steps {
                echo 'Deploying the Node.js application to development environment...'
                withCredentials([sshUserPrivateKey(credentialsId: 'new-ssh-credential', keyFileVariable: 'KEYFILE')]) {
                    // Use the SSH private key to authenticate and transfer files
                    sh """
                        ssh -i $KEYFILE ubuntu@13.235.33.167 'cd /home/ubuntu/my-nodejs-app && git pull origin development && npm install && pm2 restart app.js'
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
