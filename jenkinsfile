pipeline {
    agent any // Specifies that Jenkins can run this pipeline on any available agent (node)

    stages {
        // Stage for building the Node.js application
        stage('Build') {
            steps {
                echo 'Building the app.js application...' // Echoes a message to the Jenkins console
                // Runs npm install to install dependencies of the Node.js application
                bat label: 'npm install', script: '"C:\\Program Files\\nodejs\\npm" install'
            }
        }

        // Stage for running tests
        stage('Test') {
            steps {
                echo 'Running tests...' // Echoes a message to the Jenkins console
                // Runs npm test to execute tests for the Node.js application
                bat label: 'npm test', script: '"C:\\Program Files\\nodejs\\npm" test'
                echo "Tests completed successfully" // Echoes a message to the Jenkins console
            }
        }

        // Stage for deploying to development environment
        stage('Deploy to Development') {
            // Specifies when to execute this stage (based on branch name)
            when {
                branch 'dev-test-nodejs'
            }
            steps {
                echo 'Deploying the Node.js application to development environment...' // Echoes a message to the Jenkins console
                // Runs SSH commands to deploy the Node.js application to a development server
                withCredentials([sshUserPrivateKey(credentialsId: 'new-ssh-credential', keyFileVariable: 'KEYFILE')]) {
                    bat """
                        ssh -i "${KEYFILE}" ubuntu@13.126.30.108 'cd /home/ubuntu/my-nodejs-app && git pull origin development && npm install && pm2 restart app.js'
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!' // Echoes a message to the Jenkins console
        }
        failure {
            echo 'Pipeline failed!' // Echoes a message to the Jenkins console
        }
    }
}
