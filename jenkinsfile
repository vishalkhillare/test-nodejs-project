pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the app.js application...'
                bat label: 'npm install', script: '"C:\\Program Files\\nodejs\\npm" install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat label: 'npm test', script: '"C:\\Program Files\\nodejs\\npm" test'
                echo "Tests completed successfully"
            }
        }

        stage('Deploy to Development') {
            when {
                branch 'dev-test-nodejs'
            }
            steps {
                echo 'Deploying the Node.js application to development environment...'
                // Add deployment steps for development environment here
            }
        }

        stage('Deploy to Production') {
            when {
                branch 'prod-test-nodejs'
            }
            steps {
                echo 'Deploying the Node.js application to production environment...'
                // Add deployment steps for production environment here
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
stage('Deploy to Development') {
    when {
        branch 'dev-test-nodejs'
    }
    steps {
        echo 'Deploying the Node.js application to development environment...'
        withCredentials([sshUserPrivateKey(credentialsId: 'abf3232c-91aa-4818-9714-0b694531a4c6', keyFileVariable: 'KEYFILE')]) {
            // Use the SSH private key to authenticate and transfer files
            sh '''
                ssh -i $KEYFILE user@development-server 'commands to transfer files and restart services'
            '''
        }
    }
}

stage('Deploy to Production') {
    when {
        branch 'prod-test-nodejs'
    }
    steps {
        echo 'Deploying the Node.js application to production environment...'
        withCredentials([sshUserPrivateKey(credentialsId: 'abf3232c-91aa-4818-9714-0b694531a4c6d', keyFileVariable: 'KEYFILE')]) {
            // Use the SSH private key to authenticate and transfer files
            sh '''
                ssh -i $KEYFILE user@production-server 'commands to transfer files and restart services'
            '''
        }
    }
}
