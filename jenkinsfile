pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                echo 'Building the app.js application...' 
                bat label: 'npm install', script: '"C:\\Program Files\\nodejs\\npm" install'
            }
        }

        stage('Deploy to Development') {
            when {
                branch 'dev-test-nodejs'
            }
            steps {
                echo 'Deploying the Node.js application to development environment...' 
                withCredentials([sshUserPrivateKey(credentialsId: 'deploy-to-devlopment', keyFileVariable: 'KEYFILE')]) {
                    bat """
                        ssh -i "${KEYFILE}" ubuntu@3.109.153.26 'cd /home/ubuntu/my-nodejs-app && git pull origin dev-test-nodejs && npm install && pm2 restart app.js'
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!' 
        }
        failure {
            echo 'Pipeline failed!' 
        }
    }
}
