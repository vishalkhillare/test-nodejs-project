pipeline {
    agent any
    
    environment {
        NODEJS_HOME = tool 'NodeJS_11'
        GIT_BRANCH = 'dev-test-nodejs'
        UBUNTU_SERVER = 'ubuntu@3.111.52.247'
        DEPLOYMENT_PATH = '/home/ubuntu'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: "${GIT_BRANCH}", url: 'https://github.com/vishalkhillare/test-nodejs-project.git'
                }
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    sh 'cd D:\myapp && npm install'
                    sh "rsync -r --delete --exclude='.git' your-nodejs-app/ ${UBUNTU_SERVER}:${DEPLOYMENT_PATH}"
                    sh "ssh ${UBUNTU_SERVER} 'cd ${DEPLOYMENT_PATH} && git pull origin ${GIT_BRANCH}'"
                    sh "ssh ${UBUNTU_SERVER} 'cd ${DEPLOYMENT_PATH} && npm install'"
                    sh "ssh ${UBUNTU_SERVER} 'cd ${DEPLOYMENT_PATH} && npm start'"
                }
            }
        }
    }
}
