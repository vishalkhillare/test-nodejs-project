pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Checking out code from Git...'
                script {
                    git branch: env.BRANCH_NAME, url: 'https://github.com/vishalkhillare/test-nodejs-project.git'
                }
            }
        }

        stage('Install') {
            steps {
                echo 'Installing npm dependencies...'
                script {
                    bat 'npm install'
                }
            }
        }

        stage('Deploy') {
            environment {
                DEPLOYMENT_SERVER_IP = '15.207.99.187'
                DEPLOYMENT_PATH = '/home/ubuntu/my-nodejs-app'
                SSH_KEY = "key.pem"
                SSH_KEY_CONTENTS = credentials("keypem")
            }
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: "deploy-to-devlopment", keyFileVariable: 'SSH_KEY')
                ]) {
                    script {
                        // Create key.pem file and set permissions
                        writeFile file: 'key.pem', text: SSH_KEY_CONTENTS
                        if (isUnix()) {
                            echo 'Setting permissions for key.pem on Unix...'
                            sh """
                                chmod 600 key.pem
                                echo 'Adding deployment server to known_hosts...'
                                ssh-keyscan $DEPLOYMENT_SERVER_IP >> ~/.ssh/known_hosts
                                echo 'Deploying files using rsync...'
                                rsync -avz --delete -e 'ssh -i key.pem' ./ deployer@$DEPLOYMENT_SERVER_IP:$DEPLOYMENT_PATH
                                echo 'Executing remote commands over SSH...'
                                ssh -i key.pem deployer@$DEPLOYMENT_SERVER_IP "cd $DEPLOYMENT_PATH && npm install && npm start &"
                            """
                        } else {
                            echo 'Setting permissions for key.pem on Windows...'
                            bat """
                                type nul > key.pem
                                echo %SSH_KEY_CONTENTS% >> key.pem
                                icacls key.pem /inheritance:r /grant:r "%USERNAME%:F"
                                echo 'Adding deployment server to known_hosts...'
                                ssh-keyscan $DEPLOYMENT_SERVER_IP >> %USERPROFILE%\\.ssh\\known_hosts
                                echo 'Copying files using SCP...'
                                scp -r -i key.pem ./ deployer@$DEPLOYMENT_SERVER_IP:$DEPLOYMENT_PATH
                                echo 'Executing remote commands over SSH...'
                                ssh -i key.pem deployer@$DEPLOYMENT_SERVER_IP "cd $DEPLOYMENT_PATH && npm install && npm start"
                            """
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
